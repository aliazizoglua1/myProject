@page "{id:guid}"
@model MyProject.UI.RazorPages.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<div class="row">
    <div class="col-md-8">
        <h2>Edit Task</h2>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.TaskName" class="form-label"></label>
                        <input asp-for="Task.TaskName" class="form-control" />
                        <span asp-validation-for="Task.TaskName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.TaskType" class="form-label"></label>
                        <select asp-for="Task.TaskType" class="form-select">
                            <option value="">Select Task Type</option>
                            <option value="Development">Development</option>
                            <option value="Testing">Testing</option>
                            <option value="Design">Design</option>
                            <option value="Analysis">Analysis</option>
                            <option value="Documentation">Documentation</option>
                            <option value="Review">Review</option>
                            <option value="Deployment">Deployment</option>
                            <option value="Bug Fix">Bug Fix</option>
                            <option value="Enhancement">Enhancement</option>
                            <option value="Research">Research</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Task.TaskType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.ParentTaskId" class="form-label">Parent Task (Optional)</label>
                        <select asp-for="Task.ParentTaskId" asp-items="Model.ParentTasks" class="form-select">
                            <option value="">No Parent Task</option>
                        </select>
                        <span asp-validation-for="Task.ParentTaskId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.AssignedToUserId" class="form-label">Assigned To (User ID)</label>
                        <input asp-for="Task.AssignedToUserId" class="form-control" />
                        <span asp-validation-for="Task.AssignedToUserId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.TaskStatus" class="form-label"></label>
                        <select asp-for="Task.TaskStatus" class="form-select">
                            <option value="To Do">To Do</option>
                            <option value="In Progress">In Progress</option>
                            <option value="On Hold">On Hold</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Task.TaskStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.Priority" class="form-label"></label>
                        <select asp-for="Task.Priority" class="form-select">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Critical">Critical</option>
                        </select>
                        <span asp-validation-for="Task.Priority" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.PlannedStartDate" class="form-label"></label>
                        <input asp-for="Task.PlannedStartDate" class="form-control" type="date" />
                        <span asp-validation-for="Task.PlannedStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.PlannedEndDate" class="form-label"></label>
                        <input asp-for="Task.PlannedEndDate" class="form-control" type="date" />
                        <span asp-validation-for="Task.PlannedEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.ActualStartDate" class="form-label"></label>
                        <input asp-for="Task.ActualStartDate" class="form-control" type="date" />
                        <span asp-validation-for="Task.ActualStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.ActualEndDate" class="form-label"></label>
                        <input asp-for="Task.ActualEndDate" class="form-control" type="date" />
                        <span asp-validation-for="Task.ActualEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.PlannedEffortHours" class="form-label"></label>
                        <input asp-for="Task.PlannedEffortHours" class="form-control" type="number" step="0.5" min="0" />
                        <span asp-validation-for="Task.PlannedEffortHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Task.ActualEffortHours" class="form-label"></label>
                        <input asp-for="Task.ActualEffortHours" class="form-control" type="number" step="0.5" min="0" />
                        <span asp-validation-for="Task.ActualEffortHours" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="Task.IsMilestone" class="form-check-input" type="checkbox" />
                            <label asp-for="Task.IsMilestone" class="form-check-label">
                                Is Milestone
                            </label>
                        </div>
                        <span asp-validation-for="Task.IsMilestone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Task.Description" class="form-label"></label>
                <textarea asp-for="Task.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Task.Comments" class="form-label"></label>
                <textarea asp-for="Task.Comments" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Task.Comments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Task</button>
                <a asp-page="./Details" asp-route-id="@Model.TaskId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}