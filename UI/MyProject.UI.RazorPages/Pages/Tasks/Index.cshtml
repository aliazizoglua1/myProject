@page
@model MyProject.UI.RazorPages.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks";
}

<div class="row">
    <div class="col-md-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Tasks</h2>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Task
            </a>
        </div>

        @if (Model.Tasks != null && Model.Tasks.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Task Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Effort (Hours)</th>
                            <th>Milestone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.Tasks)
                        {
                            <tr>
                                <td>
                                    <strong>@task.TaskName</strong>
                                    @if (!string.IsNullOrEmpty(task.Description))
                                    {
                                        <br><small class="text-muted">@task.Description.Substring(0, Math.Min(task.Description.Length, 50))@(task.Description.Length > 50 ? "..." : "")</small>
                                    }
                                </td>
                                <td>@task.TaskType</td>
                                <td>
                                    <span class="badge @(task.TaskStatus == "Completed" ? "bg-success" : 
                                                         task.TaskStatus == "In Progress" ? "bg-warning" : 
                                                         task.TaskStatus == "On Hold" ? "bg-secondary" : "bg-primary")">
                                        @task.TaskStatus
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(task.Priority == "High" ? "bg-danger" : 
                                                         task.Priority == "Medium" ? "bg-warning" : "bg-info")">
                                        @task.Priority
                                    </span>
                                </td>
                                <td>@task.PlannedStartDate.ToString("MMM dd, yyyy")</td>
                                <td>@task.PlannedEndDate?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (task.PlannedEffortHours.HasValue)
                                    {
                                        <span>@task.PlannedEffortHours.Value.ToString("F1")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (task.IsMilestone)
                                    {
                                        <i class="fas fa-flag text-danger" title="Milestone"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4 class="alert-heading">No Tasks Found</h4>
                <p>You haven't created any tasks yet. <a asp-page="./Create" class="alert-link">Create your first task</a> to get started.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}