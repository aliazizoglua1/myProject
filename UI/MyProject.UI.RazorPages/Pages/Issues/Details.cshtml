@page "{id:guid}"
@model MyProject.UI.RazorPages.Pages.Issues.DetailsModel
@{
    ViewData["Title"] = "Issue Details";
}

<div class="row">
    <div class="col-md-12">
        @if (Model.Issue != null)
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>@Model.Issue.IssueName</h2>
                <div class="btn-group" role="group">
                    <a asp-page="./Edit" asp-route-id="@Model.Issue.IssueId" class="btn btn-outline-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-page="./Delete" asp-route-id="@Model.Issue.IssueId" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Issue Information</h4>
                        <div>
                            @if (Model.Issue.Severity == "Critical")
                            {
                                <span class="badge bg-danger fs-6 me-2">@Model.Issue.Severity</span>
                            }
                            else if (Model.Issue.Severity == "High")
                            {
                                <span class="badge bg-warning fs-6 me-2">@Model.Issue.Severity</span>
                            }
                            else if (Model.Issue.Severity == "Medium")
                            {
                                <span class="badge bg-primary fs-6 me-2">@Model.Issue.Severity</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6 me-2">@Model.Issue.Severity</span>
                            }
                            
                            @if (Model.Issue.Priority == "High")
                            {
                                <span class="badge bg-warning fs-6 me-2">@Model.Issue.Priority Priority</span>
                            }
                            else if (Model.Issue.Priority == "Normal")
                            {
                                <span class="badge bg-primary fs-6 me-2">@Model.Issue.Priority Priority</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6 me-2">@Model.Issue.Priority Priority</span>
                            }

                            @if (Model.Issue.Status == "Open")
                            {
                                <span class="badge bg-danger fs-6">@Model.Issue.Status</span>
                            }
                            else if (Model.Issue.Status == "In Progress")
                            {
                                <span class="badge bg-warning fs-6">@Model.Issue.Status</span>
                            }
                            else if (Model.Issue.Status == "Resolved")
                            {
                                <span class="badge bg-success fs-6">@Model.Issue.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">@Model.Issue.Status</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Issue Type:</dt>
                                <dd class="col-sm-8">@(Model.Issue.IssueType ?? "Not specified")</dd>

                                <dt class="col-sm-4">Project:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Issue.Project != null)
                                    {
                                        <span class="badge bg-info">@Model.Issue.Project.ProjectName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Related Task:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Issue.Task != null)
                                    {
                                        <span class="badge bg-secondary">@Model.Issue.Task.TaskName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Assigned To:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Issue.AssignedToUserId.HasValue)
                                    {
                                        <span class="text-muted">@Model.Issue.AssignedToUserId.Value.ToString()[..8]...</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unassigned</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Opened Date:</dt>
                                <dd class="col-sm-8">@Model.Issue.OpenedDate.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Closed Date:</dt>
                                <dd class="col-sm-8">@(Model.Issue.ClosedDate?.ToString("MMM dd, yyyy") ?? "Not closed")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Schedule Impact:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Issue.ImpactOnScheduleDays.HasValue)
                                    {
                                        <span class="badge @(Model.Issue.ImpactOnScheduleDays > 7 ? "bg-danger" : Model.Issue.ImpactOnScheduleDays > 3 ? "bg-warning" : "bg-info")">
                                            @Model.Issue.ImpactOnScheduleDays days
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No impact</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Budget Impact:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Issue.ImpactOnBudgetUsd.HasValue)
                                    {
                                        <span class="badge @(Model.Issue.ImpactOnBudgetUsd > 5000 ? "bg-danger" : Model.Issue.ImpactOnBudgetUsd > 1000 ? "bg-warning" : "bg-info")">
                                            $@Model.Issue.ImpactOnBudgetUsd.Value.ToString("N2")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No impact</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.Issue.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                                <dt class="col-sm-5">Last Updated:</dt>
                                <dd class="col-sm-7">@Model.Issue.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-12">
                            <h5><i class="fas fa-align-left"></i> Description</h5>
                            <div class="border rounded p-3 bg-light">
                                @if (!string.IsNullOrWhiteSpace(Model.Issue.IssueDescription))
                                {
                                    <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Issue.IssueDescription</pre>
                                }
                                else
                                {
                                    <span class="text-muted font-style-italic">No description provided.</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Issue.RootCause))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-search"></i> Root Cause</h5>
                                <div class="border rounded p-3 bg-light">
                                    <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Issue.RootCause</pre>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Issue.ImpactOnScope))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-bullseye"></i> Impact on Scope</h5>
                                <div class="border rounded p-3 bg-light">
                                    <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Issue.ImpactOnScope</pre>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Issue.ImpactOnQuality))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-star"></i> Impact on Quality</h5>
                                <div class="border rounded p-3 bg-light">
                                    <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Issue.ImpactOnQuality</pre>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Issue.ResolutionSteps))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5><i class="fas fa-tools"></i> Resolution Steps</h5>
                                <div class="border rounded p-3 bg-light">
                                    <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Issue.ResolutionSteps</pre>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i> Issue not found.
            </div>
        }
    </div>
</div>