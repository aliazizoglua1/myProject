@page
@model MyProject.UI.RazorPages.Pages.Issues.IndexModel
@{
    ViewData["Title"] = "Issues";
}

<div class="row">
    <div class="col-md-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Issues</h2>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Issue
            </a>
        </div>

        @if (Model.Issues != null && Model.Issues.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Issue Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Severity</th>
                            <th>Opened Date</th>
                            <th>Impact (Days)</th>
                            <th>Impact (Budget)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var issue in Model.Issues)
                        {
                            <tr>
                                <td>
                                    <strong>@issue.IssueName</strong>
                                    @if (!string.IsNullOrEmpty(issue.IssueDescription))
                                    {
                                        <br><small class="text-muted">@issue.IssueDescription.Substring(0, Math.Min(issue.IssueDescription.Length, 50))@(issue.IssueDescription.Length > 50 ? "..." : "")</small>
                                    }
                                </td>
                                <td>@(issue.IssueType ?? "Not specified")</td>
                                <td>
                                    <span class="badge @(issue.Status == "Closed" ? "bg-success" : 
                                                         issue.Status == "In Progress" ? "bg-warning" : 
                                                         issue.Status == "On Hold" ? "bg-secondary" : "bg-danger")">
                                        @issue.Status
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(issue.Priority == "Critical" ? "bg-danger" : 
                                                         issue.Priority == "High" ? "bg-warning" : 
                                                         issue.Priority == "Low" ? "bg-info" : "bg-primary")">
                                        @issue.Priority
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(issue.Severity == "Critical" ? "bg-danger" : 
                                                         issue.Severity == "High" ? "bg-warning" : 
                                                         issue.Severity == "Low" ? "bg-info" : "bg-secondary")">
                                        @issue.Severity
                                    </span>
                                </td>
                                <td>@issue.OpenedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (issue.ImpactOnScheduleDays.HasValue)
                                    {
                                        <span class="text-@(issue.ImpactOnScheduleDays > 5 ? "danger" : issue.ImpactOnScheduleDays > 2 ? "warning" : "success")">
                                            @issue.ImpactOnScheduleDays days
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.ImpactOnBudgetUsd.HasValue)
                                    {
                                        <span class="text-@(issue.ImpactOnBudgetUsd > 10000 ? "danger" : issue.ImpactOnBudgetUsd > 1000 ? "warning" : "success")">
                                            @issue.ImpactOnBudgetUsd.Value.ToString("C")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@issue.IssueId" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@issue.IssueId" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@issue.IssueId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4 class="alert-heading">No Issues Found</h4>
                <p>You haven't created any issues yet. <a asp-page="./Create" class="alert-link">Create your first issue</a> to get started.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}