@page
@model MyProject.UI.RazorPages.Pages.Issues.IndexModel
@{
    ViewData["Title"] = "Issues";
}

<div class="row">
    <div class="col-md-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Issues</h2>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Issue
            </a>
        </div>

        @if (Model.Issues != null && Model.Issues.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Issue Name</th>
                            <th>Project</th>
                            <th>Task</th>
                            <th>Type</th>
                            <th>Severity</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Assigned To</th>
                            <th>Opened Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var issue in Model.Issues)
                        {
                            <tr>
                                <td>
                                    <a asp-page="./Details" asp-route-id="@issue.IssueId" class="text-decoration-none">
                                        @issue.IssueName
                                    </a>
                                </td>
                                <td>
                                    @if (issue.Project != null)
                                    {
                                        <span class="badge bg-info">@issue.Project.ProjectName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.Task != null)
                                    {
                                        <span class="badge bg-secondary">@issue.Task.TaskName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(issue.IssueType))
                                    {
                                        <span class="badge bg-light text-dark">@issue.IssueType</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.Severity == "Critical")
                                    {
                                        <span class="badge bg-danger">@issue.Severity</span>
                                    }
                                    else if (issue.Severity == "High")
                                    {
                                        <span class="badge bg-warning">@issue.Severity</span>
                                    }
                                    else if (issue.Severity == "Medium")
                                    {
                                        <span class="badge bg-primary">@issue.Severity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@issue.Severity</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.Priority == "High")
                                    {
                                        <span class="badge bg-warning">@issue.Priority</span>
                                    }
                                    else if (issue.Priority == "Normal")
                                    {
                                        <span class="badge bg-primary">@issue.Priority</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@issue.Priority</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.Status == "Open")
                                    {
                                        <span class="badge bg-danger">@issue.Status</span>
                                    }
                                    else if (issue.Status == "In Progress")
                                    {
                                        <span class="badge bg-warning">@issue.Status</span>
                                    }
                                    else if (issue.Status == "Resolved")
                                    {
                                        <span class="badge bg-success">@issue.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@issue.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (issue.AssignedToUserId.HasValue)
                                    {
                                        <span class="text-muted">@issue.AssignedToUserId.Value.ToString()[..8]...</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unassigned</span>
                                    }
                                </td>
                                <td>@issue.OpenedDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@issue.IssueId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@issue.IssueId" class="btn btn-outline-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@issue.IssueId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle"></i> No issues found. <a asp-page="./Create" class="alert-link">Create the first issue</a>.
            </div>
        }
    </div>
</div>