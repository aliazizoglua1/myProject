@page "{id:guid}"
@model MyProject.UI.RazorPages.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<div class="row">
    <div class="col-md-8">
        <h2>Delete Project</h2>
        
        <div class="alert alert-warning">
            <h4 class="alert-heading">Are you sure you want to delete this project?</h4>
            <p>This action cannot be undone. All project data will be permanently removed.</p>
        </div>

        @if (Model.Project != null)
        {
            <div class="card">
                <div class="card-header">
                    <h4>@Model.Project.ProjectName</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Project Type:</dt>
                                <dd class="col-sm-8">@Model.Project.ProjectType</dd>

                                <dt class="col-sm-4">Industry:</dt>
                                <dd class="col-sm-8">@Model.Project.IndustryDomain</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Project.ProjectStatus == "completed" ? "bg-success" : 
                                                         Model.Project.ProjectStatus == "in-progress" ? "bg-warning" : 
                                                         Model.Project.ProjectStatus == "on-hold" ? "bg-secondary" : "bg-primary")">
                                        @Model.Project.ProjectStatus
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Start Date:</dt>
                                <dd class="col-sm-8">@Model.Project.PlannedStartDate?.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-4">End Date:</dt>
                                <dd class="col-sm-8">@Model.Project.PlannedEndDate?.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Budget:</dt>
                                <dd class="col-sm-8">@Model.Project.PlannedBudget?.ToString("C")</dd>

                                <dt class="col-sm-4">Team Size:</dt>
                                <dd class="col-sm-8">@Model.Project.TeamSize</dd>

                                <dt class="col-sm-4">Contract:</dt>
                                <dd class="col-sm-8">@Model.Project.ContractType</dd>

                                <dt class="col-sm-4">Complexity:</dt>
                                <dd class="col-sm-8">@Model.Project.ProjectComplexity</dd>

                                <dt class="col-sm-4">Current Phase:</dt>
                                <dd class="col-sm-8">@Model.Project.CurrentPhase</dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Project.Description))
                    {
                        <div class="mt-3">
                            <strong>Description:</strong>
                            <p>@Model.Project.Description</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Project.Notes))
                    {
                        <div class="mt-3">
                            <strong>Notes:</strong>
                            <p>@Model.Project.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4">
                <form method="post">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Project
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        }
    </div>
</div>