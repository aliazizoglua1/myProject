@page
@model MyProject.UI.RazorPages.Pages.Projects.CreateModel
@{
    ViewData["Title"] = "Create Project";
}

<div class="row">
    <div class="col-md-8">
        <h2>Create New Project</h2>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ProjectName" class="form-label"></label>
                        <input asp-for="Project.ProjectName" class="form-control" />
                        <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ProjectType" class="form-label"></label>
                        <select asp-for="Project.ProjectType" class="form-select">
                            <option value="">Select Project Type</option>
                            <option value="Web Development">Web Development</option>
                            <option value="Mobile App">Mobile App</option>
                            <option value="Desktop Application">Desktop Application</option>
                            <option value="API Development">API Development</option>
                            <option value="Data Science">Data Science</option>
                            <option value="DevOps">DevOps</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Project.ProjectType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.IndustryDomain" class="form-label"></label>
                        <select asp-for="Project.IndustryDomain" class="form-select">
                            <option value="">Select Industry Domain</option>
                            <option value="Healthcare">Healthcare</option>
                            <option value="Finance">Finance</option>
                            <option value="Education">Education</option>
                            <option value="E-commerce">E-commerce</option>
                            <option value="Manufacturing">Manufacturing</option>
                            <option value="Technology">Technology</option>
                            <option value="Government">Government</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Project.IndustryDomain" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ProjectStatus" class="form-label"></label>
                        <select asp-for="Project.ProjectStatus" class="form-select">
                            <option value="planned">Planned</option>
                            <option value="in-progress">In Progress</option>
                            <option value="on-hold">On Hold</option>
                            <option value="completed">Completed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Project.ProjectStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.PlannedStartDate" class="form-label"></label>
                        <input asp-for="Project.PlannedStartDate" class="form-control" type="date" />
                        <span asp-validation-for="Project.PlannedStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.PlannedEndDate" class="form-label"></label>
                        <input asp-for="Project.PlannedEndDate" class="form-control" type="date" />
                        <span asp-validation-for="Project.PlannedEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ActualStartDate" class="form-label"></label>
                        <input asp-for="Project.ActualStartDate" class="form-control" type="date" />
                        <span asp-validation-for="Project.ActualStartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ActualEndDate" class="form-label"></label>
                        <input asp-for="Project.ActualEndDate" class="form-control" type="date" />
                        <span asp-validation-for="Project.ActualEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.PlannedBudget" class="form-label"></label>
                        <input asp-for="Project.PlannedBudget" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Project.PlannedBudget" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ActualBudget" class="form-label"></label>
                        <input asp-for="Project.ActualBudget" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Project.ActualBudget" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.TeamSize" class="form-label"></label>
                        <input asp-for="Project.TeamSize" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Project.TeamSize" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ContractType" class="form-label"></label>
                        <select asp-for="Project.ContractType" class="form-select">
                            <option value="">Select Contract Type</option>
                            <option value="Fixed Price">Fixed Price</option>
                            <option value="Time & Material">Time & Material</option>
                            <option value="Cost Plus">Cost Plus</option>
                            <option value="Retainer">Retainer</option>
                        </select>
                        <span asp-validation-for="Project.ContractType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.ProjectComplexity" class="form-label"></label>
                        <select asp-for="Project.ProjectComplexity" class="form-select">
                            <option value="">Select Complexity</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Very High">Very High</option>
                        </select>
                        <span asp-validation-for="Project.ProjectComplexity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Project.CurrentPhase" class="form-label"></label>
                        <select asp-for="Project.CurrentPhase" class="form-select">
                            <option value="">Select Current Phase</option>
                            <option value="Planning">Planning</option>
                            <option value="Requirements">Requirements</option>
                            <option value="Design">Design</option>
                            <option value="Development">Development</option>
                            <option value="Testing">Testing</option>
                            <option value="Deployment">Deployment</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                        <span asp-validation-for="Project.CurrentPhase" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Project.Description" class="form-label"></label>
                <textarea asp-for="Project.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Project.Notes" class="form-label"></label>
                <textarea asp-for="Project.Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Project.Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Project</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}