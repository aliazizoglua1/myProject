@page "/resources"
@using MyProject.UI.ProjectManagementConsole.Models
@using MyProject.UI.ProjectManagementConsole.Services
@inject IResourceService ResourceService
@inject NavigationManager Navigation

<PageTitle>Resources</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Resources</h1>
        </div>
        <div class="col-auto">
            <a href="/resources/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Resource
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (resources.Count == 0)
                {
                    <div class="text-center py-4">
                        <i class="bi bi-people-fill display-1 text-muted"></i>
                        <h3 class="mt-3">No Resources Found</h3>
                        <p class="text-muted">Get started by adding your first resource.</p>
                        <a href="/resources/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Resource
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Job Title</th>
                                    <th>Status</th>
                                    <th>Tenant</th>
                                    <th>Hire Date</th>
                                    <th>Salary</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resource in resources)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                                                </div>
                                                <div class="flex-grow-1 ms-2">
                                                    <strong>@resource.FirstName @resource.LastName</strong>
                                                    <br />
                                                    <small class="text-muted">@resource.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@resource.Department</span>
                                        </td>
                                        <td>@resource.JobTitle</td>
                                        <td>
                                            <span class="badge @GetEmploymentStatusBadgeClass(resource.EmploymentStatus)">
                                                @resource.EmploymentStatus
                                            </span>
                                        </td>
                                        <td>
                                            @if (resource.Tenant != null)
                                            {
                                                <span>@resource.Tenant.OrganizationName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No Tenant</span>
                                            }
                                        </td>
                                        <td>
                                            @if (resource.HireDate.HasValue)
                                            {
                                                <span>@resource.HireDate.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            @if (resource.Salary.HasValue)
                                            {
                                                <span>$@resource.Salary.Value.ToString("N0")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/resources/@resource.ResourceId" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a href="/resources/@resource.ResourceId/edit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => DeleteResource(resource.ResourceId)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<ResourceDto> resources = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadResources();
    }

    private async Task LoadResources()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            resources = await ResourceService.GetResourcesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading resources: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteResource(Guid id)
    {
        if (await ResourceService.DeleteResourceAsync(id))
        {
            await LoadResources();
        }
        else
        {
            errorMessage = "Failed to delete resource";
        }
    }

    private string GetEmploymentStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "full-time" => "bg-success",
            "part-time" => "bg-info",
            "contract" => "bg-warning",
            "temporary" => "bg-secondary",
            "terminated" => "bg-danger",
            _ => "bg-secondary"
        };
    }
} 