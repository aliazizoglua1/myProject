@page "/organizations"
@using MyProject.UI.ProjectManagementConsole.Models
@using MyProject.UI.ProjectManagementConsole.Services
@inject IOrganizationService OrganizationService
@inject NavigationManager Navigation

<PageTitle>Organizations</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Organizations</h1>
        </div>
        <div class="col-auto">
            <a href="/organizations/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Organization
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (organizations.Count == 0)
                {
                    <div class="text-center py-4">
                        <i class="bi bi-building display-1 text-muted"></i>
                        <h3 class="mt-3">No Organizations Found</h3>
                        <p class="text-muted">Get started by creating your first organization.</p>
                        <a href="/organizations/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Organization
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Billing Plan</th>
                                    <th>Contact Email</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var organization in organizations)
                                {
                                    <tr>
                                        <td>
                                            <strong>@organization.OrganizationName</strong>
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(organization.Status)">
                                                @organization.Status
                                            </span>
                                        </td>
                                        <td>@organization.BillingPlan</td>
                                        <td>
                                            <a href="mailto:@organization.ContactEmail">@organization.ContactEmail</a>
                                        </td>
                                        <td>@organization.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/organizations/@organization.OrganizationId" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a href="/organizations/@organization.OrganizationId/edit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => DeleteOrganization(organization.OrganizationId)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<OrganizationDto> organizations = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrganizations();
    }

    private async Task LoadOrganizations()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            organizations = await OrganizationService.GetOrganizationsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading organizations: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteOrganization(Guid id)
    {
        if (await OrganizationService.DeleteOrganizationAsync(id))
        {
            await LoadOrganizations();
        }
        else
        {
            errorMessage = "Failed to delete organization";
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "active" => "bg-success",
            "inactive" => "bg-secondary",
            "suspended" => "bg-warning",
            "pending" => "bg-info",
            _ => "bg-secondary"
        };
    }
} 