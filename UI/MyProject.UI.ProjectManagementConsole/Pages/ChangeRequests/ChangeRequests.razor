@page "/changerequests"
@using MyProject.UI.ProjectManagementConsole.Models
@using MyProject.UI.ProjectManagementConsole.Services
@inject IChangeRequestService ChangeRequestService
@inject NavigationManager Navigation

<PageTitle>Change Requests</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Change Requests</h1>
        </div>
        <div class="col-auto">
            <a href="/changerequests/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Change Request
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                @if (changeRequests.Count == 0)
                {
                    <div class="text-center py-4">
                        <i class="bi bi-arrow-repeat display-1 text-muted"></i>
                        <h3 class="mt-3">No Change Requests Found</h3>
                        <p class="text-muted">Get started by adding your first change request.</p>
                        <a href="/changerequests/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Change Request
                        </a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Change Request Title</th>
                                    <th>Project</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Requested By</th>
                                    <th>Request Date</th>
                                    <th>Approval Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var changeRequest in changeRequests)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <i class="bi bi-arrow-repeat fs-4 text-info"></i>
                                                </div>
                                                <div class="flex-grow-1 ms-2">
                                                    <strong>@changeRequest.ChangeRequestTitle</strong>
                                                    @if (!string.IsNullOrEmpty(changeRequest.Description))
                                                    {
                                                        <br />
                                                        <small class="text-muted">@(changeRequest.Description.Length > 50 ? changeRequest.Description.Substring(0, 50) + "..." : changeRequest.Description)</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (changeRequest.Project != null)
                                            {
                                                <span class="badge bg-info">@changeRequest.Project.ProjectName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No Project</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@changeRequest.ChangeType</span>
                                        </td>
                                        <td>
                                            <span class="badge @GetApprovalStatusBadgeClass(changeRequest.ApprovalStatus)">
                                                @changeRequest.ApprovalStatus
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @GetPriorityBadgeClass(changeRequest.Priority)">
                                                @changeRequest.Priority
                                            </span>
                                        </td>
                                        <td>
                                            @if (changeRequest.RequestedByUser != null)
                                            {
                                                <span>@changeRequest.RequestedByUser.FirstName @changeRequest.RequestedByUser.LastName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown</span>
                                            }
                                        </td>
                                        <td>
                                            <span>@changeRequest.RequestDate.ToString("MMM dd, yyyy")</span>
                                        </td>
                                        <td>
                                            @if (changeRequest.ApprovalDate.HasValue)
                                            {
                                                <span class="text-success">@changeRequest.ApprovalDate.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/changerequests/@changeRequest.ChangeRequestId" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a href="/changerequests/@changeRequest.ChangeRequestId/edit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => DeleteChangeRequest(changeRequest.ChangeRequestId)">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<ChangeRequestDto> changeRequests = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadChangeRequests();
    }

    private async Task LoadChangeRequests()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            changeRequests = await ChangeRequestService.GetChangeRequestsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading change requests: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteChangeRequest(Guid id)
    {
        if (await ChangeRequestService.DeleteChangeRequestAsync(id))
        {
            await LoadChangeRequests();
        }
        else
        {
            errorMessage = "Failed to delete change request";
        }
    }

    private string GetApprovalStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "under review" => "bg-info",
            "cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadgeClass(string priority)
    {
        return priority.ToLower() switch
        {
            "low" => "bg-success",
            "medium" => "bg-warning",
            "high" => "bg-danger",
            "urgent" => "bg-dark",
            _ => "bg-secondary"
        };
    }
} 