@page "/"

<PageTitle>Home</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>Project Management Console</h1>
            <p class="lead">Welcome to your project management application.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Organizations</h5>
                    <p class="card-text">Manage your organizations, billing plans, and organizational settings.</p>
                    <a href="/organizations" class="btn btn-primary">
                        <i class="bi bi-building"></i> Manage Organizations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-success mb-3"></i>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage user accounts, permissions, and user-related settings.</p>
                    <a href="/users" class="btn btn-success">
                        <i class="bi bi-people"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-kanban display-4 text-info mb-3"></i>
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">Create and manage projects, tasks, and project-related activities.</p>
                    <a href="/projects" class="btn btn-info">
                        <i class="bi bi-kanban"></i> Manage Projects
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-list-task display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Tasks</h5>
                    <p class="card-text">Manage tasks, assignments, and task-related activities.</p>
                    <a href="/tasks" class="btn btn-warning">
                        <i class="bi bi-list-task"></i> Manage Tasks
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle display-4 text-danger mb-3"></i>
                    <h5 class="card-title">Risks</h5>
                    <p class="card-text">Track and manage project risks, issues, and mitigation strategies.</p>
                    <a href="/risks" class="btn btn-danger">
                        <i class="bi bi-exclamation-triangle"></i> Manage Risks
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge display-4 text-secondary mb-3"></i>
                    <h5 class="card-title">Resources</h5>
                    <p class="card-text">Manage human resources, skills, and resource allocation.</p>
                    <a href="/resources" class="btn btn-secondary">
                        <i class="bi bi-person-badge"></i> Manage Resources
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-bug display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Issues</h5>
                    <p class="card-text">Track and resolve project issues, bugs, and problems.</p>
                    <a href="/issues" class="btn btn-warning">
                        <i class="bi bi-bug"></i> Manage Issues
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-flag display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Milestones</h5>
                    <p class="card-text">Set and track project milestones and key deliverables.</p>
                    <a href="/milestones" class="btn btn-primary">
                        <i class="bi bi-flag"></i> Manage Milestones
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-repeat display-4 text-info mb-3"></i>
                    <h5 class="card-title">Change Requests</h5>
                    <p class="card-text">Submit, review, and approve project change requests.</p>
                    <a href="/changerequests" class="btn btn-info">
                        <i class="bi bi-arrow-repeat"></i> Manage Change Requests
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
